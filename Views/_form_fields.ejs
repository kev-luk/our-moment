<div class="form-container">
    <h1>Share your thoughts with the world</h1>
    <input type="text" class="form-input" name="title" maxlength="20" placeholder="Title" required />
    <input type="text" class="form-input" name="description" maxlength="40" placeholder="Description" />
    <input type="text" class="form-location" name="location" maxlength="40" placeholder="Location" />
    <textarea id="message" name="message" placeholder="Message" class="form-message" maxlength="250"
        required></textarea>
    <button type="submit" class="submit-post">Post to Forum</button>
</div>