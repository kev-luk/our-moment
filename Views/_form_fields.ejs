<div class="form-container">
    <h1>
        Share your thoughts with the world
    </h1>
    <input
        type="text"
        class="form-input"
        name="title"
        maxlength="20"
        placeholder="Title"
    />
    <input
        type="text"
        class="form-input"
        name="description"
        maxlength="40"
        placeholder="Description"
    />
    <textarea
        id="message"
        name="message"
        placeholder="Message"
        class="form-message"
        maxlength="250"
    ></textarea>
    <button type="submit" class="submit-post">Post to Map</button>
</div>
